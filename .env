# Docley Environment Variables
# Copy this file to .env and fill in your values

# =====================
# Backend (NestJS)
# =====================

# Google Gemini API Key for AI features
GOOGLE_API_KEY=your_google_api_key_here

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Whop Configuration
WHOP_API_KEY=your_whop_company_api_key_here
WHOP_PLAN_ID=your_whop_plan_id_here
WHOP_WEBHOOK_SECRET=your_whop_webhook_secret_here

# Server Configuration
PORT=3000
NODE_ENV=production

# Allowed CORS Origins (comma separated list for production)
CORS_ORIGINS=http://localhost:5173,https://docley.vercel.app

# =====================
# Frontend (Vite/React)
# =====================

# Supabase Configuration (public keys only)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# Backend API URL
VITE_API_URL=http://localhost:3000
